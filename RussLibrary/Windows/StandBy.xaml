<Window x:Class="RussLibrary.Windows.StandBy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" WindowStartupLocation="CenterScreen"
        Topmost="True" 
        xmlns:ctl="clr-namespace:RussLibrary.Controls" WindowStyle="None" Loaded="uc_Loaded" Closed="uc_Closed" 
        Name="uc" SizeToContent="Height" Width="220" >
    <StackPanel>
        
        <ctl:ProgressIndicator />
        <TextBlock
            Padding="7,7,7,7" HorizontalAlignment="Center"
            FontSize="18" Text="{Binding Message, Mode=OneWay, ElementName=uc}"
            TextWrapping="Wrap" VerticalAlignment="Center" />

    </StackPanel>
</Window>
